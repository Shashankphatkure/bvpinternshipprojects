<div class="main-body">
    <div class="create-form-section">
        <form action="/movie/creatte" method="post">
            <div class="form-group">
                <input type="text" name="name" placeholder="Name" id="" class="form-control">
            </div>
            <div class="form-group">
                <select name="genre" id="" class="form-control">
                        <option value="0">--Select--</option>
                    {{#each genres}}
                        <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <input type="file" name="picture" id="" class="form-control">
            </div>
            <div class="form-group">
                <button class="btn-primary">Create</button>
            </div>
        </form>        
    </div>
</div>
<div class="table-section">
    <table>
       <thead>
           <tr>
               <th>Id</th>
               <th>Name</th>
               <th>Picture</th>
               <th colspan="2">Action</th>
           </tr>
       </thead> 
       <tbody>
           {{#each movies}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.name}}</td>
                    <td><img src="{{this.picture}}" alt=""></td>
                    <td><button class="btn-alert">Delete</button></td>
                </tr>
           {{/each}}
       </tbody> 
    </table>
</div>