<div class="main-body">
    <div class="form-section">
        <form action="/ad/post" method="post">
         <div class="form-group">
             <input type="text" name="title" placeholder="Title" id="" class="form-control">
         </div>
         <div class="form-group">
             <select name="category" class="form-control" id="">
                 <option value="0">--Select</option>
                 {{#each categories}}
                 <option value="{{this.id}}">{{this.name}}</option>
                 {{/each}}
             </select>
         </div>
         <div class="form-group">
             <select name="postedby" class="form-control" id="">
                 <option value="0">--Select--</option>
                 {{#each users}}
                 <option value="{{this.id}}">{{this.name}}</option>
                 {{/each}}
             </select>
         </div>
         <div class="form-group">
             <input type="file" name="form-control" name="picture" id="">
         </div>
         <div class="form-group">
             <textarea name="description" id="" placeholder="Description" class="form-control" cols="30" rows="10">

             </textarea>
         </div>
         <div class="form-group">
             <button class="btn-primary">Post Ad</button>
         </div>
        </form>
    </div>
</div>